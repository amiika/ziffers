    {
      def value
        {
        :condition => (cond.methods.include?(:value) ? cond.value : nil),
        :if => (first.methods.include?(:value) ? first.value : nil),
        :else => (!second.empty? and second.sval.methods.include?(:value) ? second.sval.value : nil)
        }
      end
    }

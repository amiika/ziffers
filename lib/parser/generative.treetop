  rule multi_conditional_assingment
    v:(conditional_set)
    {
      def value
        val = eval_cond v.value
        val ? val : nil
      end
      def eval_cond(tfunc)
        if tfunc.is_a?(Hash)
          cond = eval tfunc[:condition]
          if cond
            eval_cond tfunc[:if]
          else
            eval_cond tfunc[:else]
          end
        else
          tfunc
        end
      end
    }
  end

  rule conditional_set
